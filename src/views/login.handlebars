<main class="containerPadre">
    <div class="container">
        <form class="form animate__animated animate__lightSpeedInRight" id="loginForm">
            <h1 class="h1Form">Bienvenido</h1>
            <div class="inp">
                <input type="email" name="email" class="input" id="inputEmail" placeholder="Email" required>
                <i class="bi bi-envelope-fill"></i>
            </div>
            <div class="inp">
                <input type="password" name="password" class="input" id="inputPassword" placeholder="Contraseña" required>
                <i class="bi bi-lock-fill"></i>
            </div>
            <button type="button" class="submit" id="submit">Iniciar Sesion</button>
            <p class="msjForm"> ¿No tienes cuenta? <a href="/register" class="linkForm">Por favor, Registrate</a></p>
        </form>
    </div>
</main>

